<h1>Edit Expense Item</h1>
<form action="/expense-items/{{expenseItem._id}}" method="POST">
    <label>Expense Item:</label>
    <input type="text" name="itemName" value="{{expenseItem.itemName}}" required><br><br>

    <label>Expense Head:</label>
    <select name="expenseHead">
        {{#each expenseHeads}}
        <option value="{{this._id}}" {{#if (eq this._id expenseItem.expenseHead._id)}}selected{{/if}}>{{this.title}}</option>
        {{/each}}
    </select><br><br>

    <label>Unit:</label>
    <input type="text" name="unit" value="{{expenseItem.unit}}" required><br><br>

    <label>Show in List:</label>
    <input type="radio" name="showInList" value="yes" {{#if expenseItem.showInList}}checked{{/if}}> Yes
    <input type="radio" name="showInList" value="no" {{#unless expenseItem.showInList}}checked{{/unless}}> No<br><br>

    <button type="submit">Update Expense Item</button>
</form>
