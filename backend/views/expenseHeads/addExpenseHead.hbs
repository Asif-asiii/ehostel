<h1>Add Expense Head</h1>
<form action="/expenseHeads/add" method="POST">
  <!-- Expense Head Title -->
  <label>Expense Head Title</label>
  <input type="text" name="title" required><br><br>

  <!-- Expense Categories (Radio Buttons) -->
  <label>Expense Categories:</label><br>
  <label>
    <input type="radio" name="categories" value="Hostel Expenses" required> Hostel Expenses
  </label>
  <label>
    <input type="radio" name="categories" value="Tenant Expense" required> Tenant Expense
  </label><br><br>

  <!-- Expense Head Parent -->
  <label>Expense Head Parent</label>
  <select name="parent">
    <option value="">None</option>
    {{#each expenseHeads}}
      <option value="{{this._id}}">{{this.title}}</option>
    {{/each}}
  </select><br><br>

  <!-- Remarks -->
  <label>Remarks</label>
  <textarea name="remarks"></textarea><br><br>

  <button type="submit">Add Expense Head</button>
</form>
