<form action="/managementUsers/edit/{{user._id}}" method="POST">
    <div>
        <label>Name:</label>
        <input type="text" name="name" value="{{user.name}}" required>
    </div>
    <div>
        <label>Email:</label>
        <input type="email" name="email" value="{{user.email}}" required>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password" required>
    </div>
    <div>
        <label>Confirm Password:</label>
        <input type="password" name="confirmPassword" required>
    </div>
    <div>
        <label>Role:</label>
        <input type="radio" name="role" value="Admin" {{#if (eq user.role 'Admin')}}checked{{/if}}> Admin
        <input type="radio" name="role" value="Warden" {{#if (eq user.role 'Warden')}}checked{{/if}}> Warden
    </div>
    <button type="submit">Update User</button>
</form>
